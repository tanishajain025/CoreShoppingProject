
@model IEnumerable<CoreShoppingAdminPortal.Models.Brand>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<style>

    .btn1 {
        margin-right: 3500px;
        margin-top: -10px;
    }
</style>
<center><h2>Brand Index</h2></center>
    &nbsp;&nbsp;
<a asp-controller="Brand" asp-action="Create"><button type="button" class="btn btn-info btn1">Create</button></a>
    &nbsp;&nbsp;
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.BrandId)</th>
            <th>@Html.DisplayNameFor(model => model.BrandName)</th>

            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var brand in Model)
        {

            <tr>
                <td>@Html.DisplayFor(modelItem => brand.BrandId)</td>
                <td>@Html.DisplayFor(modelItem => brand.BrandName)</td>


                <td>
                    <a asp-controller="Brand" asp-action="Details"
                       asp-route-id="@brand.BrandId"><button type="button" class="btn btn-dark">Details</button></a>|
                    <a asp-controller="Brand" asp-action="Edit"
                       asp-route-id="@brand.BrandId"><button type="button" class="btn btn-info">Edit</button></a>|
                    <a asp-controller="Brand" asp-action="Delete"
                       asp-route-id="@brand.BrandId"><button type="button" class="btn btn-danger">Delete</button></a>|

                </td>

            </tr>
        }
    </tbody>
</table>
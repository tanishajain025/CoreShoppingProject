@model CoreShoppingAdminPortal.Models.Brand
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2> Add Brand</h2>
&nbsp; &nbsp;
<form asp-action="create" asp-controller="Brand">
    <div class="form-group row">
        <label for="text" class="col-sm-2 col-form-label" asp-for="BrandName">Brand Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="Text" asp-for="BrandName" />
        </div>
        <br />
        <label for="text" class="col-sm-2 col-form-label" asp-for="BrandDescription">Brand Description</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="Text" asp-for="BrandDescription" />
        </div>
        <br />

    </div>
    <center>
        <input type="submit" value="Submit" class="btn btn-success" />&nbsp;
        <button class="btn btn-success" asp-controller="Brand" asp-action="Index">
            Back
        </button>
    </center>
</form>

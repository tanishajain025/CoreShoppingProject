@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2>Cart Page</h2>
<table class="table table-hover">
    <tr>
        <th>Options</th>
        <th>Id</th>
        <th>Name</th>
        <th>Photo</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Sub Total</th>
    </tr>

    @foreach (var item in ViewBag.cart)
    {
    <tr>
        <td><a asp-controller="cart" asp-action="Remove" asp-route-id="@item.Products.ProductId">Remove</a></td>
        <td>@item.Products.ProductId</td>
        <td>@item.Products.ProductName</td>
        <td><img src="@item.Products.ProductImage" width="60" /></td>

        <td>@item.Products.ProductPrice</td>
        <td> <a class="btn btn-default" asp-controller="cart" asp-action="Minus" asp-route-id="@item.Products.ProductId">-</a>@item.Quantity
        <a class="btn btn-default" asp-controller="cart" asp-action="Plus" asp-route-id="@item.Products.ProductId">+</a></td>

        <td>@(item.Products.ProductPrice * item.Quantity)</td>
    </tr>
    }

    <tr>
        <td align="right" colspan="7">Sum</td>
        <td>
            @ViewBag.total
        </td>
    </tr>


</table>
<br/>
<a asp-controller="Home" asp-action="Index"> Continue Shopping</a>
<a asp-controller="Customers" asp-action="Login1"> CheckOut</a>
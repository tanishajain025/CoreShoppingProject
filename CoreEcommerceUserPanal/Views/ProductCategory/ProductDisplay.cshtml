@model IEnumerable<CoreEcommerceUserPanal.Models.Products>
@{
    ViewData["Title"] = "ProductDisplay";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<br />
<br /><br /><br />
<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Product Display</h1>

            </div>
        </div>
    </div>
</section>
<!-- End Banner Area -->
<div class="album py-5 bg-light">
    <div class="container">

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img src="@item.ProductImage" class="bd-placeholder-img card-img-top" height="400" width="200" />
                        @*<svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c" /><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>*@
                        <div class="card-body">
                            <p class="card-text" style="font-weight:bold">@item.ProductName</p>

                            <p class="card-text">@item.ProductDescription</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="cart" asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-sm btn-outline-secondary">View details</a>

                                    <a asp-controller="cart" asp-action="Buy" asp-route-id="@item.ProductId" class="btn btn-sm btn-outline-secondary">Add To Cart</a>



                                </div>
                                <h6 class="text-muted">@item.ProductQty Left</h6>
                            </div>
                        </div>
                    </div>
                </div>
            }




        </div>
    </div>
</div>


            <div class="col-md-12-details im1">
                <table class="table">

                    <tr>
                        <th>Product Id</th>
                        <th>Product Name</th>

                        <th>Actions</th>
                    </tr>
                    @foreach (var item in ViewBag.p)
                    {
                        <tr>
                            <th>@item.ProductId</th>
                            <th>@item.ProductName</th>

                            <td>
                                <a asp-controller="cart" asp-action="Details" class="btn btn-dark"

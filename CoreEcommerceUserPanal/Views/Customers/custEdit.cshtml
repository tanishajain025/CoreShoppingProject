    <div class="row">
        <div class="col-xl-3 col-lg-4 col-md-5">
            <div class="sidebar-categories">
                <br /><br />
                <ul class="main-categories">
                    <li class="main-nav-list">
                        <a data-toggle="collapse" href="#fruitsVegetable" aria-expanded="false" aria-controls="fruitsVegetable">
                            <span class="lnr lnr-arrow-right"></span> <a class="nav-link" asp-controller="customers" asp-action="Details">My Profile</a>
                        </a>

                    </li>
                    <li class="main-nav-list">
                        <a data-toggle="collapse" href="#meatFish" aria-expanded="false" aria-controls="meatFish">
                            <span class="lnr lnr-arrow-right"></span> <a class="nav-link" asp-controller="customers" asp-action="OrderHistory">My Orders</a>
                        </a>

                    </li>
                    <li class="main-nav-list">
                        <a data-toggle="collapse" href="#cooking" aria-expanded="false" aria-controls="cooking">
                            <span class="lnr lnr-arrow-right"></span> <a class="nav-link" asp-controller="customers" asp-action="custEdit">Edit Profile</a>
                        </a>

                    </li>
                    <li class="main-nav-list">
                        <a data-toggle="collapse" href="#beverages" aria-expanded="false" aria-controls="beverages">
                            <span class="lnr lnr-arrow-right"></span><a class="nav-link" asp-controller="customers" asp-action="password">Reset Password</a>
                        </a>

                    </li>
                    <li class="main-nav-list">
                        <a data-toggle="collapse" href="#homeClean" aria-expanded="false" aria-controls="homeClean">
                            <span class="lnr lnr-arrow-right"></span> <a class="nav-link" asp-controller="customers" asp-action="Feedback">Feedback</a>
                        </a>

                    </li>
                    <br />
                    <br />
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="col-xl-11 col-lg-10 col-md-12">
    <div class="container">
        <div class="row">

            <div class="col-md-12-details im1">

                <form asp-action="custEdit" asp-controller="Customers">
                    <div class="form-group row">
                        <input type="hidden" asp-for="CustomerId" />
                        <br />
                        <label for="text" class="col-sm-2 col-form-label" asp-for="FirstName">First Name </label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="FirstName" />
                        </div>
                        <br /><br />
                        <label for="text" class="col-sm-2 col-form-label" asp-for="LastName">LastName</label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="LastName" />
                        </div>
                        <br />
                        <br />
                        <label for="text" class="col-sm-2 col-form-label" asp-for="UserName">UserName</label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="UserName" />
                        </div>
                        <br />
                        <br />

                        <label for="text" class="col-sm-2 col-form-label" asp-for="EmailId">Email Id</label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="EmailId" />
                        </div>
                        <br /><br />
                        <label for="text" class="col-sm-2 col-form-label" asp-for="Gender">Gender</label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="Gender" />
                        </div>
                        <br /><br />
                        <label for="text" class="col-sm-2 col-form-label" asp-for="Address">Address</label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="Address" />
                        </div>
                        <br /><br />
                        <label for="text" class="col-sm-2 col-form-label" asp-for="Country">Country</label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="Country" />
                        </div>
                    </div><br />
                    <center>
                        <input type="submit" value="Edit" class="btn btn-success" />&nbsp;
                        <button class="btn btn-success" asp-controller="Home" asp-action="About">

                            Back
                        </button>
                    </center>
                </form>


            </div>
        </div>
    </div>
</div>



@model CoreEcommerceUserPanal.Models.Customers
@{
    ViewData["Title"] = "password";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2>Change Password</h2>
<form asp-action="password" method="post" asp-controller="Customers">

    <div class="form-label-group">
        <input type="text" name="oldpassword" class="form-control" placeholder="Old Password" />
        <label for="password" class="sr-only">Old Password</label>
    </div>
    &nbsp;
    <div class="form-label-group">
        <input type="password" name="newpassword" class="form-control" placeholder="New Password" />
        <label for="password" class="sr-only">New Password</label>
    </div>
    <br/>
    <div class="form-label-group">
        <input type="password" name="newpassword1" class="form-control" placeholder="Confirm Password" />
      
    </div>
    <br/>
    <center>
        @*<input type="submit" value="Edit" class="btn btn-success" />&nbsp;*@
        <button class="btn btn-success" type="submit">
            Sign in
        </button>


    </center>
</form>


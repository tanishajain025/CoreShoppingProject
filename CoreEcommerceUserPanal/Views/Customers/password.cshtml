@model CoreEcommerceUserPanal.Models.Customers
@{
    ViewData["Title"] = "password";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<style>


    .im1 {
        margin-left: 300px;
        margin-top: -380px;
    }
</style>
<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1> My Dashboard</h1>

            </div>
        </div>
    </div>
</section>
<!-- End Banner Area -->
<div class="container">
    <div class="row">
        <div class="col-xl-3 col-lg-4 col-md-5">
            <div class="sidebar-categories">
                <br /><br />
                <ul class="main-categories">
                    <li class="main-nav-list">
                        <a data-toggle="collapse" href="#fruitsVegetable" aria-expanded="false" aria-controls="fruitsVegetable">
                            <span class="lnr lnr-arrow-right"></span> <a class="nav-link" asp-controller="customers" asp-action="Details">My Profile</a>
                        </a>

                    </li>
                    <li class="main-nav-list">
                        <a data-toggle="collapse" href="#meatFish" aria-expanded="false" aria-controls="meatFish">
                            <span class="lnr lnr-arrow-right"></span> <a class="nav-link" asp-controller="customers" asp-action="OrderHistory">My Orders</a>
                        </a>

                    </li>
                    <li class="main-nav-list">
                        <a data-toggle="collapse" href="#cooking" aria-expanded="false" aria-controls="cooking">
                            <span class="lnr lnr-arrow-right"></span> <a class="nav-link" asp-controller="customers" asp-action="custEdit">Edit Profile</a>
                        </a>

                    </li>
                    <li class="main-nav-list">
                        <a data-toggle="collapse" href="#beverages" aria-expanded="false" aria-controls="beverages">
                            <span class="lnr lnr-arrow-right"></span><a class="nav-link" asp-controller="customers" asp-action="password">Reset Password</a>
                        </a>

                    </li>
                    <li class="main-nav-list">
                        <a data-toggle="collapse" href="#homeClean" aria-expanded="false" aria-controls="homeClean">
                            <span class="lnr lnr-arrow-right"></span> <a class="nav-link" asp-controller="customers" asp-action="Feedback">Feedback</a>
                        </a>

                    </li>
                    <br />
                    <br />
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="col-xl-11 col-lg-10 col-md-12">
    <div class="container">
        <div class="row">

            <div class="col-md-12-details im1">
                <form asp-action="password" method="post" asp-controller="Customers">

                    <div class="form-label-group">
                        <input type="password" name="oldpassword" class="form-control" placeholder="Old Password" required />
                        <label for="password" class="sr-only">Old Password</label>
                    </div>
                    &nbsp;
                    <div class="form-label-group">
                        <input type="password" name="newpassword" class="form-control" placeholder="New Password" required />
                        <label for="password" class="sr-only">New Password</label>
                    </div>
                    &nbsp;
                    <div class="form-label-group">
                        <input type="password" name="newpassword1" class="form-control" placeholder="Confirm Password" required />

                    </div>
                    &nbsp;
                    <p>@ViewBag.Error</p>
                    <center>

                        <button class="btn btn-success" type="submit">
                            Change Password
                        </button>


                    </center>
                </form>


            </div>
        </div>
    </div>
</div>

